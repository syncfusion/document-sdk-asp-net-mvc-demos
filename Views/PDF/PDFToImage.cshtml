@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("pdftoimage", "pdf", FormMethod.Post);
            {
                <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <table width="100%">
                                <tr>
                                    <td>
                                        Click the "Convert to Image" button to convert the first page of the PDF document to Image using PdfToImageConverter.
                                        Click the "View Template" button to view the PDF document generated by Essential PDF. Please note
                                        that Adobe Reader or its equivalent is required to view the resultant document.
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <br />
                                        <input id="viewtemplate" class="e-btn" type="submit" name="submit1" value="View Template" style="width:150px; text-transform:capitalize" />
                                        &emsp;
                                        <input id="submit" class="e-btn" type="submit" value="Convert to Image" style="width:150px; text-transform:capitalize" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                Html.EndForm();
            }}
    </div>
}
@section ActionDescription{
    <div id="action-description" style="margin-top: 10px">
        This sample demonstrates how to convert a PDF document to an image using the PdfToImageConverter. It supports customization in image conversion, such as setting a transparent background and removing annotations for a specific page or range of pages.
    </div>
}
@section Meta{
    <meta name="description" content="This example demonstrates the PDF To Image conversion in ASP.NET MVC platform using PdfToImageConverter. Explore here for more details." />
                }
@section Description{
    <div id="description" style="margin-top: 10px">
        More information about the PDF to Image conversion using the PdfToImageConverter can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf-to-image">section.</a>
    </div>
}
@section Title{
    <title>ASP.NET Core PdfToImageConverter - PDF To Image Example - Syncfusion Demos </title>
                }
@section Header{
    <h1 class='sb-sample-text'>Example of PDF To Image using ASP.NET Core PdfToImageConverter</h1>
                }