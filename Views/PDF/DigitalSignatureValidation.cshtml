@model EJ2MVCSampleBrowser.Models.SignatureValidationMesssage
@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("digitalsignaturevalidation", "pdf", FormMethod.Post);
            {
                <div class="tablediv" style="font-size:14px">
                    <text class="rowdiv">
                        Click the button to validate the digital signature by using Essential PDF.
                    </text>
                </div>
                <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <table style="width:100%">
                                <tr>
                                    <td align="left">
                                        <br />
                                        <input type="submit" class="e-btn" value="Validate Signature" name="DigitalSignatureValidation" style="width: 150px; text-transform:capitalize" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                Html.EndForm();
            }}
        <br />
        @Html.TextAreaFor(s => s.Message, 1, 1, new { @style = "width:850px; height:225px", @readonly = "readonly" })
    </div>

}
@section ActionDescription{
    <div id="action-description" style="margin-top: 10px">
        This sample demonstrates how to validate the digital signatures in existing PDF document.
    </div>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Digital Signature Validation in ASP.NET MVC PDF library. Explore here for more details."/>
                }
@section Title{
                    <title>ASP.NET MVC PDF library - Digital Signature Validation Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Digital Signature Validation in ASP.NET MVC PDF Library</h1>
                }