@section ControlsSection{
    <div class="control-section">
        @{ using (Html.BeginForm("removeimages", "pdf", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="tablediv" style="font-size:14px">
                    Click the button to view a PDF document generated by Essential PDF. Please note
                    that Adobe Reader or its equivalent is required to view the resultant document.
                </div>
                <br />
                <div style="border: solid 1px #788DB3; line-height: 23px; padding: 15px;">
                    <table cellspacing="0" cellpadding="0" border="0">
                        <tbody>
                            <tr>
                                <td>
                                    <div>
                                        <label>
                                            <input id="viewtemplate" class="e-btn" type="submit" name="viewTemplate" value="View Template" style="width: 150px; text-transform:capitalize" />
                                        </label>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div>
                                        <label>
                                            <br />
                                            <input type="submit" class="e-btn" name="removeImage" value="Remove Images" style="width: 150px; text-transform:capitalize" />
                                        </label>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br />
                Html.EndForm();
            }
        }
    </div>
}
@section ActionDescription{
    <div id="action-description" style="margin-top: 10px">
         This sample demonstrates how to remove images from an existing PDF document.
    </div>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Remove Images in ASP.NET MVC PDF library. Explore here for more details."/>
                }
<script language="javascript" type="text/javascript">
    function Validate(id) {
        var str = document.getElementById(id).value;
        if (document.getElementById(id).value == "") {
            document.getElementById(id + 'validator').innerText = '*';
            document.getElementById(id + 'validator').style.display = 'block';
        }
        else if (!isNaN(str)) {
            document.getElementById(id + 'validator').style.display = 'none';
        }
        else {
            document.getElementById(id + 'validator').innerText = 'Invalid Entry';
            document.getElementById(id + 'validator').style.display = 'block';
        }
    }
</script>
@section Title{
                    <title>ASP.NET MVC PDF library - Remove Images Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Remove Images in ASP.NET MVC PDF Library</h1>
                }