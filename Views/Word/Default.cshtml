@using Syncfusion.EJ2
@{ViewData["Title"] = "    Essential DocIO (Word) : Default : Syncfusion";}
@section ControlsSection{
    <div class="control-section">
        @{ Html.BeginForm("SalesInvoice", "Word", FormMethod.Post);
            {
                <div style="margin-top: 10px">
                    Click the button to view the generated Word document or PDF. Please note that Microsoft Word Viewer or Microsoft Word is required to view the resultant Word document and PDF viewer is required to view the resultant PDF.
                    <div style="margin-top: 10px">
                        <div class="celldiv">
                            Select the Order ID :
                            @Html.DropDownList("id", (IEnumerable<SelectListItem>)ViewData["PriorityID"], new { @class = "e-btn" })
                        </div>
                        <div style="margin-top: 10px">
                            Save As :
                            <input type="radio" id="rdButtonDoc" name="SaveOption" value="WordDoc" style="margin-left: 7px" />
                            <label for="rdButtonDoc" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as Word Doc format">DOC</label>
                            &nbsp;
                            <input type="radio" id="rdButtonDocx" name="SaveOption" value="WordDocx" style="margin-left: 7px" checked="checked" />
                            <label for="rdButtonDocx" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as Word Docx format">DOCX</label>
                            &nbsp;
                            <input type="radio" id="rdButtonWordML" name="SaveOption" value="WordML" style="margin-left: 7px" />
                            <label for="rdButtonWordML" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as WordML format">WordML</label>
                            &nbsp;
                            <input type="radio" id="rdButtonPdf" name="SaveOption" value="Pdf" style="margin-left: 7px" />
                            <label for="rdButtonPdf" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as PDF">PDF</label>
                        </div>
                    </div>
                    <div style="margin-top: 8px">
                        <input id="viewtemplate" name="Button" class="e-btn" type="submit" value="View Template" style="width: 150px; text-transform:capitalize" />
                        &nbsp;
                        <input id="generate" name="Button" class="e-btn" type="submit" value="Generate Document" style="width:170px; text-transform:capitalize" />
                    </div>
                </div>
                Html.EndForm();
            }
        }
    </div>
}
@section ActionDescription{
    <div>
        This sample demonstrates the generation of sales invoice from an input Word template using Mail Merge functionality of Essential DocIO.
    </div>
}
@section Description{
    <div>
        DocIO allows you to create, read, manipulate, and render Word documents. With the mail merge support, you can create a batch of personalized document or report very easily and fast.
        <ul>
            <li>
                You can design reports in Microsoft Word and allow DocIO to populate documents with data from various data sources such as business objects, ADO.NET objects, arrays, XML, dynamic objects, and relational objects.
            </li>
            <li>
                You can create advanced reports by dynamically repeating a region of the document and by nesting mail merge region inside each other to populate hierarchical data.
            </li>
        </ul>
    </div>
    <div style="margin-top: 15px">
        More information about the Mail Merge functionality can be found in this
        <a href="https://help.syncfusion.com/file-formats/docio/working-with-mailmerge">documentation</a>
        section.
    </div>
}
@section Meta{
    <meta name="description" content="This sample demonstrates the generation of sales invoice from an input Word template using Mail Merge functionality of Essential DocIO." />
}