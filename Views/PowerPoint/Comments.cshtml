@using Syncfusion.EJ2
@section ActionDescription{
    This sample demonstrates how to add comments to a presentation slide.
}
@section ControlsSection{
    <div class="control-section">
        @{ViewData["Title"] = "    Essential Presentation (Presentation) : Comments : Syncfusion";}

        @{Html.BeginForm("Comments", "PowerPoint", FormMethod.Post);
            {
                <div class="tablediv">
                    <text>
                        Click the button to view a presentation document generated by Essential Presentation. Please note that Microsoft PowerPoint viewer is required to view the resultant document.
                    </text>
                </div>
                <div class="tablediv">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <div style="border: solid 0px #EDEDED; padding: 5px 7px 5px 7px;">
                                <table width="100%">
                                    <tr>
                                        <td align="left" width="100%">
                                            <label><input id="submit" type="submit" name="button" class="e-btn" value="Create Presentation" /></label>
                                        </td>

                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                Html.EndForm();
            }
        }
    </div>
}



@section Title{
    <title>ASP.NET MVC PowerPoint (Presentation) library - Comments Example - Syncfusion Demos </title>
}
@section Meta{
    <meta name="description" content="This example demonstrates the Comments in ASP.NET MVC PowerPoint (Presentation) library. Explore here for more details." />
}
@section Header{
    <h1 class='sb-sample-text'>Example of Comments in ASP.NET MVC PowerPoint (Presentation) Library</h1>
}