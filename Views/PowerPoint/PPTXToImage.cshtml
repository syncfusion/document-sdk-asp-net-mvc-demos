@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates how to convert the slides to an image.
}

@section Description{    
    <b>Features:</b>
    <br />
    <br />
    <ul>
			<li>Convert all slide elements like text, shape, SmartArt diagram, table, etc., along with its formatting.</li>
			<li>Convert RTL(right to left) text.</li>
            <li>Charts in a slide can be converted to image.</li>
			<li>Slides can be converted to JPEG, PNG, BMP, TIFF, EMF, and GIF formats.</li>
    </ul>
    <br />
}

@section ControlsSection{
    <div class="control-section">
        @{ViewData["Title"] = "    Essential Presentation (Presentation) : PPTXToImage : Syncfusion";}

        @{Html.BeginForm("PPTXToImage", "PowerPoint", FormMethod.Post);
            {
                <div class="tablediv">
                    <text class="rowdiv">
                        Clicking the button below will result in an image being generated from the first slide of a presentation document using Essential Presentation.
                    </text>
                    <br />
                    <div class="rowdiv">
                        <div class="celldiv">
                            <div style="border: solid 0px #EDEDED; padding: 5px 7px 5px 7px;">
                                <table width="100%">
                                    <tr>
                                        <td align="left">
                                            <input type="submit" name="button" class="e-btn" value="Convert To Image" />
                                        </td>
                                    </tr>
                                </table>
                            </div>


                        </div>
                    </div>
                </div>
                Html.EndForm();
            }
        }
    </div>
}
@section Title{
                    <title>ASP.NET MVC PowerPoint (Presentation) library - PPTX to Image Example - Syncfusion Demos </title> 
                }
@section Meta{
                    <meta name="description" content="This example demonstrates the PPTX to Image in ASP.NET MVC PowerPoint (Presentation) library. Explore here for more details."/>
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of PPTX to Image in ASP.NET MVC PowerPoint (Presentation) Library</h1>
                }