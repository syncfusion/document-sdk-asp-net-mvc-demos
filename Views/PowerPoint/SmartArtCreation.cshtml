@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates how to create SmartArt diagram in a PowerPoint presentation and convert it to PDF document.
}

@section Description{    
    <b>Features:</b>
    <br />
    <br />
    <ul>
			<li>Create and edit 134 default SmartArt diagram equivalent to Microsoft PowerPoint.</li>
            <li>Add, modify and remove nodes of the SmartArt diagram.</li>
            <li>Convert presentation with SmartArt diagram to PDF/Image.</li>
    </ul>
    <br />
}

@section ControlsSection{
    <div class="control-section">
        @{ViewData["Title"] = "    Essential Presentation (Presentation) : SmartArtCreation : Syncfusion";}

        @{Html.BeginForm("SmartArtCreation", "PowerPoint", FormMethod.Post);
            {
                <div class="tablediv">
                    <text class="rowdiv">
                        Click the button to view a generated document in PowerPoint presentation or PDF file.  Please note that Microsoft PowerPoint viewer is required to view the resultant presentation document.
                    </text>
                </div>
                <br />
                <div class="tablediv">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <div style="border: solid 0px #EDEDED; padding: 5px 7px 5px 7px;">
                                <table width="100%">
                                    <tr>
                                        <label><strong>Save As :</strong></label>
                                        <input type="radio" name="File Type" style="margin-left: 7px" value="PPTX" checked> PPTX


                                        <input type="radio" name="File Type" style="margin-left: 7px" value="PDF Document"> PDF

                                        <br />
                                        <br />

                                        <label><input id="submit" type="submit" name="button" class="e-btn" value="Generate Document" /></label>

                                    </tr>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                Html.EndForm();
            }
        }
    </div>
}
@section Title{
                    <title>ASP.NET MVC PowerPoint (Presentation) library - SmartArt Creation Example - Syncfusion Demos </title> 
                }
@section Meta{
                    <meta name="description" content="This example demonstrates the SmartArt Creation in ASP.NET MVC PowerPoint (Presentation) library. Explore here for more details."/>
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of SmartArt Creation in ASP.NET MVC PowerPoint (Presentation) Library</h1>
                }